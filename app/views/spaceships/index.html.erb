
<div class="wrapper">

<a class="btn my_button" href="#map">Go To Map</a>


  <h1 class="show-title">Galaxy Getaways</h1>
    <div class="grid_index">
      <% @spaceships.each do |spaceship| %>
          <div class="card_index">
              <%= cl_image_tag spaceship.photos.first.key %>
              <div class="card_body">
                <h2 class="card-title"><%= spaceship.name %></h2>
                <p>$ <%= spaceship.price  %></h2>
              <%= link_to '', spaceship_path(spaceship), class: 'card_link'  %>
            </div>
          </div>
      <% end %>
    </div>
  </div>


  <div id="map" style="width: 80%; height: 600px; margin: 0 auto 20px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
