
<div class="wrapper">
  <h1 class="show-title">Galaxy Getaways</h1>
    <div class="grid_index">
      <% @spaceships.each do |spaceship| %>
          <div class="card_index">
              <%= cl_image_tag spaceship.photos.first.key %>
              <div class="card_body">
                <h2 class="card-title"><%= spaceship.name %></h2>
                <p>$ <%= spaceship.price  %></h2>
              <%= link_to '', spaceship_path(spaceship), class: 'card_link'  %>
            </div>
          </div>
      <% end %>
    </div>
</div>
