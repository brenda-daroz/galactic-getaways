<div class="container">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs col-5 form-container">
      <h2>Log in</h2>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions mt-3" id="action-container">
        <%= f.button :submit, "Log in", class: "btn btn-primary purple_button" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary my_button" %>
      </div>
      <div class="form-container"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
    </div>


  <% end %>
</div>
